{
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "paths": { "@database/*": ["*"] },
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "target": "es5"
  }
}
